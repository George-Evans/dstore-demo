<% if signed_in? %>
	<h2>Add a Review:</h2>
	<%= form_for([@product, @product.comments.build]) do |f| %>
		<p class="comment-summary">
			<%= f.label :summary %>
			<%= f.text_field :summary %>
			<div class="rating"></div>
		</p>
		<p>
			<%= f.label :body, "Review" %>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit "Submit" %>
		</p>
	<% end %>
<% end %>

